{
  "name": "onespan-sign-node",
  "version": "0.1.0",
  "description": "Node.js library for the OneSpan Sign API",
  "main": "./dist/index.js",
  "typings": "./dist/onespan-sign-node.d.ts",
  "repository": "https://github.com/getbreathelife/onespan-sign-node.git",
  "author": "Breathe Life",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "rm -rf ./dist/ && tsc",
    "lint": "eslint --quiet ./",
    "test": "jest -i",
    "docs": "yarn build && ./bin/generate-docs.sh",
    "prepublishOnly": "npm run compile && npm run test"
  },
  "keywords": [
    "onespan",
    "sign",
    "node",
    "typescript",
    "javascript"
  ],
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "dependencies": {
    "form-data": "^4.0.0",
    "node-fetch": "^2.6.6"
  },
  "devDependencies": {
    "@breathelife/prettier-plugin-sort-imports": "^3.0.5",
    "@microsoft/api-documenter": "^7.13.77",
    "@microsoft/api-extractor": "^7.19.2",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.13",
    "@types/node-fetch": "^2.5.12",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^8.4.1",
    "eslint-plugin-import": "^2.25.3",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.1",
    "typescript": "^4.5.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "prettier --write"
    ]
  }
}
